<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.servicios.ServiciosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgsucursal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/servicios" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domicilios" />

            <TextView
                android:id="@+id/tvProDesciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel : 3118996919 - 321414 4958" />

            <TextView
                android:id="@+id/tvhorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/horarios_de_lun_vie" />

            <TextView
                android:id="@+id/tvhorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/horarios" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>